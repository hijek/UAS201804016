<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mainbg">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/splash"
        android:layout_marginBottom="10dp"/>
    <EditText
        style="@style/EditTextLogin"
        android:id="@+id/EditEmailRegister"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_email"
        android:inputType="textEmailAddress"/>
    <EditText
        style="@style/EditTextLogin"
        android:id="@+id/EditPasswordRegister"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_lock_open_24"
        android:inputType="textPassword"/>
    <EditText
        style="@style/EditTextLogin"
        android:id="@+id/EditFullnameRegister"
        android:hint="Full Name"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:inputType="text"/>
    <EditText
        style="@style/EditTextLogin"
        android:id="@+id/EditJenkalRegister"
        android:hint="Gender"
        android:drawableLeft="@drawable/ic_baseline_accessibility_24"
        android:inputType="text"/>
    <EditText
        style="@style/EditTextLogin"
        android:id="@+id/EditAlamatRegister"
        android:hint="Address"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:inputType="text"
        android:layout_marginBottom="9dp"/>
    <Button
        android:id="@+id/btnsubmitregister"
        style="@style/BtnLogin"
        android:text="Register"
        android:onClick="registerme"/>
    <Button
        android:id="@+id/btncancelregister"
        style="@style/BtnLogin"
        android:text="Cancel"
        android:onClick="cancelme"/>
</LinearLayout>